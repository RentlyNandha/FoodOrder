<h2>Current Cart</h2>

<table>
  <thead>
    <tr>
      <td>Product</td>
      <td>Price</td>
      <td>Quantity</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td>Rs<%= item.price %></td>
        <td><%= form_tag order_items_path do %>
          <%= hidden_field_tag :product_id, item.product.id %>
          <%= number_field_tag :quantity, item.quantity, in: 0...10%>
          <%= submit_tag "Update" %>
            <%end%></td>
        <td>
          <%= form_for item, method: :delete do |f| %>
            <%= f.submit "Remove" %>
          <% end %>
        </td>
      </tr>
    <% end %>
    
  </tbody>
  <tr>
    <td>
      Total : Rs <%=current_cart.sub_total%>
    </td>
  </tr>
</table>
<%= link_to "CheckOut", "/checkout", method: "post", data:{ confirm: "Are you sure? "} %>
